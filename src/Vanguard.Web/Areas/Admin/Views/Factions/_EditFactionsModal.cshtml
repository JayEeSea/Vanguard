@model Vanguard.Web.Models.Faction

<form id="editFactionsForm" action="/admin/factions/editfactions" method="post" class="text-dark bg-light">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="modal-header">
        <h5 class="modal-title">Edit Faction</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Universe" class="form-label"></label>
            <select asp-for="UniverseId" class="form-select" asp-items="@(new SelectList(ViewBag.Universes, "Id", "Name"))">
                <option value="">-- Select Universe --</option>
            </select>
            <span asp-validation-for="UniverseId" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>

<script src="~/js/factions-modal.js" asp-append-version="true"></script>