@model Vanguard.Web.Models.Branch

<form id="disableBranchesForm" action="/admin/branches/disablebranches" method="post" class="disable-branches-form text-dark bg-light">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="modal-header">
        <h5 class="modal-title">Disable Branch</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
        <p>Are you sure you want to disable <strong>@Model.Name</strong>?</p>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Disable</button>
    </div>
</form>
