@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <!-- Group 1: Structure -->
    <div class="col">
        <div class="card h-100 shadow-lg border-0 bg-body-tertiary">
            <div class="card-body admin-panel-box">
                <h5 class="card-title">Structure</h5>
                <ul class="list-unstyled mb-0">
                    <li><a asp-area="Admin" asp-controller="Universes" asp-action="Index">Manage Universes</a></li>
                    <li><a asp-area="Admin" asp-controller="Factions" asp-action="Index">Manage Factions</a></li>
                    <li><a asp-area="Admin" asp-controller="Branches" asp-action="Index">Manage Branches</a></li>
                    <li><a asp-area="Admin" asp-controller="Units" asp-action="Index">Manage Units</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Group 2: Positions -->
    <div class="col">
        <div class="card h-100 shadow-lg border-0 bg-body-tertiary">
            <div class="card-body admin-panel-box">
                <h5 class="card-title">Positions</h5>
                <ul class="list-unstyled mb-0">
                    <li><a asp-area="Admin" asp-controller="Positions" asp-action="Index">Manage Positions</a></li>
                    <li><a asp-area="Admin" asp-controller="PositionTypes" asp-action="Index">Manage Position Types</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Group 3: Items -->
    <div class="col">
        <div class="card h-100 shadow-lg border-0 bg-body-tertiary">
            <div class="card-body admin-panel-box">
                <h5 class="card-title">Items</h5>
                <ul class="list-unstyled mb-0">
                    <li><a asp-area="Admin" asp-controller="ShipClasses" asp-action="Index">Manage Ship Classes</a></li>
                    <li><a asp-area="Admin" asp-controller="Ships" asp-action="Index">Manage Ships</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Group 4: Metadata -->
    <div class="col">
        <div class="card h-100 shadow-lg border-0 bg-body-tertiary">
            <div class="card-body admin-panel-box">
                <h5 class="card-title">Metadata</h5>
                <ul class="list-unstyled mb-0">
                    <li><a asp-area="Admin" asp-controller="Ranks" asp-action="Index">Manage Ranks</a></li>
                    <li><a asp-area="Admin" asp-controller="Genders" asp-action="Index">Manage Genders</a></li>
                    <li><a asp-area="Admin" asp-controller="Species" asp-action="Index">Manage Species</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
