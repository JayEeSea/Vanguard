@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <!-- Group 1: Structure -->
    <div class="col">
        <div class="card h-100 shadow-lg border-0 bg-body-tertiary">
            <div class="card-body admin-panel-box">
                <h5 class="card-title">Structure</h5>
                <ul class="list-unstyled mb-0">
                    <li><a asp-area="Admin" asp-controller="Admin" asp-action="ManageUniverses">Manage Universes</a></li>
                    <li><a asp-area="Admin" asp-controller="Admin" asp-action="ManageFactions">Manage Factions</a></li>
                    <li><a asp-area="Admin" asp-controller="Admin" asp-action="ManageBranches">Manage Branches</a></li>
                    <li><a asp-area="Admin" asp-controller="Admin" asp-action="ManageUnits">Manage Units</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Group 2: Positions -->
    <div class="col">
        <div class="card h-100 shadow-lg border-0 bg-body-tertiary">
            <div class="card-body admin-panel-box">
                <h5 class="card-title">Positions</h5>
                <ul class="list-unstyled mb-0">
                    <li><a asp-area="Admin" asp-controller="Admin" asp-action="ManagePositions">Manage Positions</a></li>
                    <li><a asp-area="Admin" asp-controller="Admin" asp-action="ManagePositionTypes">Manage Position Types</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Group 3: Metadata -->
    <div class="col">
        <div class="card h-100 shadow-lg border-0 bg-body-tertiary">
            <div class="card-body admin-panel-box">
                <h5 class="card-title">Metadata</h5>
                <ul class="list-unstyled mb-0">
                    <li><a asp-area="Admin" asp-controller="Admin" asp-action="ManageRanks">Manage Ranks</a></li>
                    <li><a asp-area="Admin" asp-controller="Admin" asp-action="ManageGenders">Manage Genders</a></li>
                    <li><a asp-area="Admin" asp-controller="Admin" asp-action="ManageSpecies">Manage Species</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
